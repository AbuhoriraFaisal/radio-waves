@model IEnumerable<radio_waves.Models.InsuranceCompanySettlement>

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "ملخص تسويات شركات التأمين" : "Insurance Company Summary";

    string pageTitle = isArabic ? "ملخص تسويات شركات التأمين" : "Insurance Company Settlement Summary";
    string createNewText = isArabic ? "تسوية جديدة" : "Create New";
    string providerIdLabel = isArabic ? "مزود الخدمة" : "Provider";
    string companyNameLabel = isArabic ? "اسم شركة التأمين" : "Insurance Company";
    string totalShareLabel = isArabic ? "إجمالي حصة التأمين" : "Total Insurance Share";
    string netPayableLabel = isArabic ? "الصافي المستحق" : "Net Payable";
    string settlementDateLabel = isArabic ? "تاريخ التسوية" : "Settlement Date";
    string editLabel = isArabic ? "تعديل" : "Edit";
    string settleLabel = isArabic ? "تسوية" : "Settle";
}

<div class="container mt-4">
    <h1 class="mb-4">@pageTitle</h1>

    <p class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> @createNewText
        </a>
    </p>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@providerIdLabel</th>
                <th>@companyNameLabel</th>
                <th>@totalShareLabel</th>
                <th>@netPayableLabel</th>
                <th>@settlementDateLabel</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProviderId)</td>
                    <td>@Html.DisplayFor(modelItem => item.InsuranceCompanyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalInsuranceShare)</td>
                    <td>@Html.DisplayFor(modelItem => item.NetPayable)</td>
                    <td>@Html.DisplayFor(modelItem => item.SettlementDate)</td>
                    <td class="d-flex gap-2">
                        @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">@editLabel</a> *@

                        <form asp-action="MarkAsComplete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ProviderId" value="@item.ProviderId" />
                            <input type="hidden" name="InsuranceCompanyName" value="@item.InsuranceCompanyName" />
                            <input type="hidden" name="TotalInsuranceShare" value="@item.TotalInsuranceShare" />
                            <input type="hidden" name="NetPayable" value="@item.NetPayable" />
                            <input type="hidden" name="SettlementDate" value="@item.SettlementDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
                            <button type="submit" class="btn btn-sm btn-success">@settleLabel</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
