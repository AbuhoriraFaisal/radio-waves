@model IEnumerable<radio_waves.Models.TechnicianSettlementViewModel>

@{
    ViewData["Title"] = "TechnicianSummary";
}

<h1>TechnicianSummary</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TechnicianName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFromReservations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFromInsurance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDebtShare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalExpenses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetPayable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SettelmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFromReservations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFromInsurance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDebtShare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalExpenses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetPayable)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.SettelmentDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
