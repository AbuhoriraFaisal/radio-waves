@model IEnumerable<radio_waves.Models.TechnicianSettlement>

@{
    ViewData["Title"] = "TechnicianSummary";
    var settlements = Model.ToList();
}

<h1>TechnicianSummary</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- ✅ Form for POSTing the settlement list -->
<form asp-action="TechniciansSettlement" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Run End of Day Settlement</button>

    <br />
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TechnicianId)</th>
                <th>@Html.DisplayNameFor(model => model.TechnicianName)</th>
                <th>@Html.DisplayNameFor(model => model.TotalFromReservations)</th>
                <th>@Html.DisplayNameFor(model => model.TotalFromInsurance)</th>
                <th>@Html.DisplayNameFor(model => model.TotalDebtShare)</th>
                <th>@Html.DisplayNameFor(model => model.TotalExpenses)</th>
                <th>@Html.DisplayNameFor(model => model.NetPayable)</th>
                <th>@Html.DisplayNameFor(model => model.SettelmentDate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < settlements.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].TechnicianId)
                        <input type="hidden" name="Settlements[@i].TechnicianId" value="@settlements[i].TechnicianId" />

                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].TechnicianName)
                        <input type="hidden" name="Settlements[@i].TechnicianName" value="@settlements[i].TechnicianName" />
                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].TotalFromReservations)
                        <input type="hidden" name="Settlements[@i].TotalFromReservations" value="@settlements[i].TotalFromReservations" />
                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].TotalFromInsurance)
                        <input type="hidden" name="Settlements[@i].TotalFromInsurance" value="@settlements[i].TotalFromInsurance" />
                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].TotalDebtShare)
                        <input type="hidden" name="Settlements[@i].TotalDebtShare" value="@settlements[i].TotalDebtShare" />
                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].TotalExpenses)
                        <input type="hidden" name="Settlements[@i].TotalExpenses" value="@settlements[i].TotalExpenses" />
                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].NetPayable)
                        <input type="hidden" name="Settlements[@i].NetPayable" value="@settlements[i].NetPayable" />
                    </td>
                    <td>
                        @Html.DisplayFor(_ => settlements[i].SettelmentDate)
                        <input type="hidden" name="Settlements[@i].SettelmentDate" value="@settlements[i].SettelmentDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@settlements[i].Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@settlements[i].Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@settlements[i].Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

