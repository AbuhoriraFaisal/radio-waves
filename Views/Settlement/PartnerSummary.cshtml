@model IEnumerable<radio_waves.Models.PartnerSettlement>

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "ملخص تسوية الشركاء" : "Partner Summary";

    string pageTitle = isArabic ? "ملخص تسوية الشركاء" : "Partner Settlement Summary";
    string createNewLabel = isArabic ? "تسوية جديدة" : "Create New";
    string finalizeLabel = isArabic ? "اعتماد تسوية الشركاء" : "Finalize Partner Settlement";
    string partnerNameLabel = isArabic ? "اسم الشريك" : "Partner Name";
    string amountLabel = isArabic ? "المبلغ" : "Amount";
    string settlementDateLabel = isArabic ? "تاريخ التسوية" : "Settlement Date";
    string editLabel = isArabic ? "تعديل" : "Edit";
    string detailsLabel = isArabic ? "تفاصيل" : "Details";
    string deleteLabel = isArabic ? "حذف" : "Delete";
}

<div class="container mt-4" dir="@(isArabic ? "rtl" : "ltr")">
    <h1 class="mb-4 @(isArabic ? "text-end" : "text-start")">@pageTitle</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> @createNewLabel
        </a>
    </p>

    <form asp-action="PartnersSettlement" method="post" class="mb-4">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <input type="hidden" name="Settlements[@i].PartnerName" value="@Model.ElementAt(i).PartnerName" />
            <input type="hidden" name="Settlements[@i].Amount" value="@Model.ElementAt(i).Amount" />
            <input type="hidden" name="Settlements[@i].SettlementDate" value="@Model.ElementAt(i).SettlementDate.ToString("yyyy-MM-dd")" />
        }
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle-fill"></i> @finalizeLabel
        </button>
    </form>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@partnerNameLabel</th>
                <th>@amountLabel</th>
                <th>@settlementDateLabel</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PartnerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.SettlementDate)</td>
                    <td class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">@editLabel</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">@detailsLabel</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">@deleteLabel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
