@model radio_waves.Models.Expenditure

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "تعديل المصروف" : "Edit Expenditure";

    string pageTitle = isArabic ? "تعديل المصروف" : "Edit Expenditure";
    string backToList = isArabic ? "العودة إلى القائمة" : "Back to List";
    string submitLabel = isArabic ? "حفظ التعديلات" : "Save";

    string categoryLabel = isArabic ? "الفئة" : "Category";
    string amountLabel = isArabic ? "المبلغ" : "Amount";
    string isSealedLabel = isArabic ? "تم ختمه؟" : "Is Sealed?";
    string radiologyTypeLabel = isArabic ? "نوع الأشعة" : "Radiology Type";
}

<div class="container mt-4">
    <h1 class="mb-4">@pageTitle</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Category" class="form-label">@categoryLabel</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label">@amountLabel</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsSealed" id="IsSealed" />
                    <label class="form-check-label" for="IsSealed">@isSealedLabel</label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RadiologyTypeId" class="form-label">@radiologyTypeLabel</label>
                    <select asp-for="RadiologyTypeId" class="form-select" asp-items="ViewBag.RadiologyTypeId"></select>
                    <span asp-validation-for="RadiologyTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> @submitLabel
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> @backToList
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
