@model radio_waves.Models.LoginViewModel
@{
    Layout = null;

    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    bool isArabic = currentCulture.StartsWith("ar", StringComparison.OrdinalIgnoreCase);

    string pageTitle = isArabic ? "تسجيل الدخول" : "Login";
    string emailLabel = isArabic ? "البريد الإلكتروني" : "Email";
    string passwordLabel = isArabic ? "كلمة المرور" : "Password";
    string rememberMeLabel = isArabic ? "تذكرني" : "Remember Me";
    string loginButtonText = isArabic ? "تسجيل الدخول" : "Login";
    string switchLangLabel = isArabic ? "English" : "العربية";
    string switchLangCode = isArabic ? "en" : "ar";
}
<!DOCTYPE html>
<html lang="@currentCulture" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@pageTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @if (isArabic)
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            background-color: #fff;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            animation: fadeIn 0.6s ease-in-out;
            max-width: 400px;
            margin: auto;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .form-icon {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 15px;
            color: #6c757d;
            pointer-events: none;
        }

        .form-control {
            padding-left: 2.5rem;
        }

        [dir="rtl"] .form-icon {
            left: auto;
            right: 15px;
        }

        [dir="rtl"] .form-control {
            padding-left: 1rem;
            padding-right: 2.5rem;
        }

        .language-switch {
            position: absolute;
            top: 1rem;
        @(isArabic ? "left: 1rem;" : "right: 1rem;");
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100 position-relative">

    <!-- Language Switch -->
    <div class="language-switch">
        <a href="/Home/SetLanguage?culture=@switchLangCode" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-translate"></i> @switchLangLabel
        </a>
    </div>

    <div class="login-card position-relative shadow-sm">
        <h3 class="text-center mb-4 text-primary">
            <i class="bi bi-shield-lock-fill"></i> @pageTitle
        </h3>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

            <div class="mb-3 position-relative">
                <i class="form-icon bi bi-envelope-fill"></i>
                <label asp-for="Email" class="form-label">@emailLabel</label>
                <input asp-for="Email" class="form-control" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3 position-relative">
                <i class="form-icon bi bi-lock-fill"></i>
                <label asp-for="Password" class="form-label">@passwordLabel</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">@rememberMeLabel</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-1"></i> @loginButtonText
                </button>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
