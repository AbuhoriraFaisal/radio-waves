@model radio_waves.Models.InsuranceCompanies

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "إضافة شركة تأمين" : "Create Insurance Company";

    string title = isArabic ? "إضافة شركة تأمين" : "Create Insurance Company";
    string insuranceLabel = isArabic ? "بيانات شركة التأمين" : "Insurance Company Details";
    string providerLabel = isArabic ? "اسم الشركة" : "Provider";
    string policyLabel = isArabic ? "رقم البوليصة" : "Policy Number";
    string coverageLabel = isArabic ? "تفاصيل التغطية" : "Coverage Details";
    string percentageLabel = isArabic ? "نسبة التغطية" : "Coverage %";
    string createBtn = isArabic ? "إضافة" : "Create";
    string backToList = isArabic ? "العودة للقائمة" : "Back to List";
}

<div class="container mt-4" >
    <h1 class="mb-3 ">@title</h1>
    <h4 class="mb-4  text-muted">@insuranceLabel</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Provider" class="form-label">@providerLabel</label>
                    <input asp-for="Provider" class="form-control" />
                    <span asp-validation-for="Provider" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PolicyNumber" class="form-label">@policyLabel</label>
                    <input asp-for="PolicyNumber" class="form-control" />
                    <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CoverageDetails" class="form-label">@coverageLabel</label>
                    <input asp-for="CoverageDetails" class="form-control" />
                    <span asp-validation-for="CoverageDetails" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CoveragedPercentage" class="form-label">@percentageLabel</label>
                    <input asp-for="CoveragedPercentage" class="form-control" />
                    <span asp-validation-for="CoveragedPercentage" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> @createBtn
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle"></i> @backToList
                </a>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
