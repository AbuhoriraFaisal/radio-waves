@model IEnumerable<radio_waves.Models.InsuranceCompanies>

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "شركات التأمين" : "Insurance Companies";

    string pageTitle = isArabic ? "شركات التأمين" : "Insurance Companies";
    string createLabel = isArabic ? "إضافة جديد" : "Create New";
    string providerLabel = isArabic ? "اسم الشركة" : "Provider";
    string policyLabel = isArabic ? "رقم البوليصة" : "Policy Number";
    string coverageLabel = isArabic ? "تفاصيل التغطية" : "Coverage Details";
    string percentageLabel = isArabic ? "نسبة التغطية" : "Coverage %";
    string editLabel = isArabic ? "تعديل" : "Edit";
    string deleteLabel = isArabic ? "حذف" : "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 ">@pageTitle</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> @createLabel
        </a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>@providerLabel</th>
                <th>@policyLabel</th>
                <th>@coverageLabel</th>
                <th>@percentageLabel</th>
                <th class="text-center">@(!isArabic ? "Actions" : "الخيارات")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Provider</td>
                    <td>@item.PolicyNumber</td>
                    <td>@item.CoverageDetails</td>
                    <td>@item.CoveragedPercentage%</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-pencil-square"></i> @editLabel
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> @deleteLabel
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
