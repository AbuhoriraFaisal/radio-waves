@model radio_waves.Models.PartnerServices

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PartnerServices</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartnerId" class="control-label"></label>
                <select asp-for="PartnerId" class ="form-control" asp-items="ViewBag.PartnerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount_Percentage" class="control-label"></label>
                @Html.TextBoxFor(model => model.Amount_Percentage, new { type = "number", step = "0.01", min = "0", max = "100", @class = "form-control" })
                @* <input asp-for="Amount_Percentage" class="form-control" /> *@
                <span asp-validation-for="Amount_Percentage" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
