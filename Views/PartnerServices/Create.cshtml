@model radio_waves.Models.PartnerServices

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "إضافة خدمات الشريك" : "Create Partner Services";

    string heading = isArabic ? "إضافة خدمة شريك جديدة" : "Add New Partner Service";
    string partnerLabel = isArabic ? "الشريك" : "Partner";
    string serviceLabel = isArabic ? "الخدمة" : "Service";
    string amountLabel = isArabic ? "النسبة / المبلغ" : "Amount / Percentage";
    string submitLabel = isArabic ? "حفظ" : "Save";
    string backLabel = isArabic ? "العودة للقائمة" : "Back to List";
}

<div class="container mt-4">
    <h1 class="mb-4">@heading</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="PartnerId" class="form-label">@partnerLabel</label>
                    <select asp-for="PartnerId" class="form-select" asp-items="ViewBag.PartnerId">
                        <option value="">-- @(partnerLabel) --</option>
                    </select>
                    <span asp-validation-for="PartnerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceId" class="form-label">@serviceLabel</label>
                    <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId">
                        <option value="">-- @(serviceLabel) --</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount_Percentage" class="form-label">@amountLabel</label>
                    @Html.TextBoxFor(model => model.Amount_Percentage, new { type = "number", step = "0.01", min = "0", max = "100", @class = "form-control" })
                    <span asp-validation-for="Amount_Percentage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> @submitLabel
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left-circle"></i> @backLabel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
