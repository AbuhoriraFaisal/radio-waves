@model radio_waves.Models.Partner

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "تعديل الشريك" : "Edit Partner";

    string heading = isArabic ? "تعديل بيانات الشريك" : "Edit Partner Information";
    string nameLabel = isArabic ? "اسم الشريك" : "Partner Name";
    string commentLabel = isArabic ? "ملاحظات" : "Comment";
    string activeLabel = isArabic ? "نشط؟" : "Active?";
    string submitLabel = isArabic ? "حفظ التعديلات" : "Save Changes";
    string backLabel = isArabic ? "العودة للقائمة" : "Back to List";
}

<div class="container mt-4">
    <h1 class="mb-4 ">@heading</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="PartnerName" class="form-label">@nameLabel</label>
                    <input asp-for="PartnerName" class="form-control" />
                    <span asp-validation-for="PartnerName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comment" class="form-label">@commentLabel</label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Active" id="Active" />
                    <label class="form-check-label" for="Active">@activeLabel</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> @submitLabel
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left-circle"></i> @backLabel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
