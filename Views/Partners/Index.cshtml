@model IEnumerable<radio_waves.Models.Partner>

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "الشركاء" : "Partners";

    string title = isArabic ? "قائمة الشركاء" : "Partners List";
    string createNew = isArabic ? "إضافة شريك" : "Create New";
    string nameHeader = isArabic ? "اسم الشريك" : "Partner Name";
    string commentHeader = isArabic ? "ملاحظات" : "Comment";
    string activeHeader = isArabic ? "نشط؟" : "Active";
    string editText = isArabic ? "تعديل" : "Edit";
    string detailsText = isArabic ? "تفاصيل" : "Details";
    string deleteText = isArabic ? "حذف" : "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4">@title</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> @createNew
        </a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>@nameHeader</th>
                <th>@commentHeader</th>
                <th>@activeHeader</th>
                <th class="text-center">@(!isArabic ? "Actions" : "الخيارات")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PartnerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>
                        @if (item.Active)
                        {
                            <span class="badge bg-success">@("✓")</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@("✗")</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-pencil-square"></i> @editText
                        </a>
                        @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-info-circle"></i> @detailsText
                        </a> *@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> @deleteText
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
