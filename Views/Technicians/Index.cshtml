@model IEnumerable<radio_waves.Models.Technician>

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "الفنيين" : "Technicians";

    string heading = isArabic ? "قائمة الفنيين" : "Technician List";
    string createLabel = isArabic ? "إضافة فني جديد" : "Create New Technician";
    string nameLabel = isArabic ? "الاسم الكامل" : "Full Name";
    string certLabel = isArabic ? "الشهادة" : "Certification";
    string availableLabel = isArabic ? "متاح؟" : "Available?";
    string editLabel = isArabic ? "تعديل" : "Edit";
    string deleteLabel = isArabic ? "حذف" : "Delete";
}

<div class="container mt-4" dir="@(isArabic ? "rtl" : "ltr")">
    <h1 class="mb-4 @(isArabic ? "text-end" : "text-start")">@heading</h1>

    <p class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> @createLabel
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-light">
                <tr>
                    <th>@nameLabel</th>
                    <th>@certLabel</th>
                    <th>@availableLabel</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Certification</td>
                        <td>@(item.IsAvailable ? (isArabic ? "نعم" : "Yes") : (isArabic ? "لا" : "No"))</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil-square"></i> @editLabel
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> @deleteLabel
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
