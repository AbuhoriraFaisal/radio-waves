@model radio_waves.Models.Shift

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "إضافة وردية" : "Create Shift";

    string pageTitle = isArabic ? "إضافة وردية جديدة" : "Add New Shift";
    string backToList = isArabic ? "العودة إلى القائمة" : "Back to List";
    string submitLabel = isArabic ? "حفظ" : "Save";

    string nameLabel = isArabic ? "اسم الوردية" : "Shift Name";
    string startTimeLabel = isArabic ? "وقت البدء" : "Start Time";
    string endTimeLabel = isArabic ? "وقت الانتهاء" : "End Time";
    string percentageLabel = isArabic ? "نسبة الفني" : "Technician Percentage";
    string isSpecialLabel = isArabic ? "هل هي وردية خاصة؟" : "Is Special Shift?";
}

<div class="container mt-4">
    <h1 class="mb-4">@pageTitle</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">@nameLabel</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartTime" class="form-label">@startTimeLabel</label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EndTime" class="form-label">@endTimeLabel</label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TechnicianPercentage" class="form-label">@percentageLabel</label>
                    <input asp-for="TechnicianPercentage" class="form-control" />
                    <span asp-validation-for="TechnicianPercentage" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsSpecial" id="IsSpecial" />
                    <label class="form-check-label" for="IsSpecial">@isSpecialLabel</label>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> @submitLabel
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> @backToList
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
