@model radio_waves.Models.Patient

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = culture.StartsWith("ar");

    ViewData["Title"] = isArabic ? "إضافة مريض" : "Create Patient";

    string title = isArabic ? "إضافة مريض" : "Create Patient";
    string nameLabel = isArabic ? "الاسم الكامل" : "Full Name";
    string phoneLabel = isArabic ? "رقم الهاتف" : "Phone";
    string hasInsuranceLabel = isArabic ? "هل لديه تأمين؟" : "Has Insurance?";
    string insuranceLabel = isArabic ? "شركة التأمين" : "Insurance Company";
    string submitText = isArabic ? "إضافة" : "Create";
    string backText = isArabic ? "العودة للقائمة" : "Back to List";
    string selectInsurance = isArabic ? "-- اختر التأمين --" : "-- Select Insurance --";
}

<div class="container mt-4" >
    <h1 class="mb-4">@title</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">@nameLabel</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label">@phoneLabel</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                @* Uncomment this section if using insurance fields *@
                @* 
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="HasInsurance" id="HasInsurance" />
                    <label class="form-check-label" for="HasInsurance">@hasInsuranceLabel</label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="InsuranceId" class="form-label">@insuranceLabel</label>
                    <select asp-for="InsuranceId" asp-items="ViewBag.Insurances" class="form-control" id="InsuranceId" disabled>
                        <option value="">@selectInsurance</option>
                    </select>
                    <span asp-validation-for="InsuranceId" class="text-danger"></span>
                </div>
                *@

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> @submitText
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left-circle"></i> @backText
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const hasInsuranceCheckbox = document.getElementById("HasInsurance");
            const insuranceDropdown = document.getElementById("InsuranceId");

            if (hasInsuranceCheckbox && insuranceDropdown) {
                function toggleDropdown() {
                    insuranceDropdown.disabled = !hasInsuranceCheckbox.checked;
                    if (!hasInsuranceCheckbox.checked) {
                        insuranceDropdown.value = "";
                    }
                }

                hasInsuranceCheckbox.addEventListener("change", toggleDropdown);
                toggleDropdown(); // Initial on load
            }
        });
    </script>
}
