@model IEnumerable<radio_waves.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";

    var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    bool isArabic = currentCulture.StartsWith("ar", StringComparison.OrdinalIgnoreCase);

    string pageTitle = isArabic ? "الحجوزات" : "Reservations";
    string searchPlaceholder = isArabic ? "بحث باسم المريض أو الفني" : "Search by patient or technician name";
    string fromDateLabel = isArabic ? "من تاريخ" : "From Date";
    string toDateLabel = isArabic ? "إلى تاريخ" : "To Date";
    string createNewLabel = isArabic ? "حجز جديد" : "Create New";
    string filterLabel = isArabic ? "بحث" : "Search";
    string printLabel = isArabic ? "طباعة PDF" : "Print PDF";

    string[] headers = isArabic
        ? new[] { "المريض", "التاريخ", "نوع الأشعة", "الفني", "السعر الأساسي", "المبلغ المدفوع", "مدفوع", "ملغى", "الخيارات" }
        : new[] { "Patient", "Date", "Type", "Technician", "Base Price", "Paid Amount", "Paid?", "Canceled?", "Actions" };
}

<h1 class="mb-4">@pageTitle</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2 align-items-end">

        <div class="col-md-3">
            <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
                   class="form-control" placeholder="@searchPlaceholder" />
        </div>

        <div class="col-md-2">
            <label class="form-label">@fromDateLabel</label>
            <input type="date" name="fromDate" value="@Context.Request.Query["fromDate"]" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">@toDateLabel</label>
            <input type="date" name="toDate" value="@Context.Request.Query["toDate"]" class="form-control" />
        </div>

        <div class="col-md-auto">
            <a asp-action="Create" class="btn btn-primary">@createNewLabel</a>
        </div>

        <div class="col-md-auto">
            <button type="submit" class="btn btn-success">@filterLabel</button>
        </div>

        <div class="col-md-auto">
            <a class="btn btn-secondary"
               asp-action="Print"
               asp-route-searchString="@Context.Request.Query["searchString"]"
               asp-route-fromDate="@Context.Request.Query["fromDate"]"
               asp-route-toDate="@Context.Request.Query["toDate"]">
                @printLabel
            </a>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            @foreach (var header in headers)
            {
                <th>@header</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var rowClass = item.IsCanceled ? "table-danger" : "";
            <tr class="@rowClass">
                <td>@item.Patient.FullName</td>
                <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                <td>@item.RadiologyType.Name</td>
                <td>@item.Technician.FullName</td>
                <td>@item.BasePrice.ToString("C")</td>
                <td>@item.PaiedAmount.ToString("C")</td>
                <td>
                    @if (item.IsPaid)
                    {
                        <span class="text-success fw-bold">@(isArabic ? "نعم" : "Yes") ✅</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">@(isArabic ? "لا" : "No") ❌</span>
                    }
                </td>
                <td>
                    @if (item.IsCanceled)
                    {
                        <span class="text-danger fw-bold">@(isArabic ? "نعم" : "Yes") ❌</span>
                    }
                    else
                    {
                        <span class="text-success fw-bold">@(isArabic ? "لا" : "No") ✅</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        @(isArabic ? "تفاصيل" : "Details")
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        @(isArabic ? "إلغاء" : "Cancel")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
